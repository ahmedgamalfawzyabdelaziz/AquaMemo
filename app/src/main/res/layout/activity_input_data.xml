                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingEnd="16dp"> <Button
                android:id="@+id/btn_select_candle1_date"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:minWidth="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_weight="0"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/cd_select_candle_date"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="8dp"
                android:drawableTint="#FF000000"
                android:elevation="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:text=""
                android:hint="@string/select_date_hint"
                android:textColorHint="#40000000" android:textColor="#FF000000"
                android:textSize="16sp"
                app:strokeColor="#FF000000"
                app:strokeWidth="1dp" />
            </LinearLayout>

